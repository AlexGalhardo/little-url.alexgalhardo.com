generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Users {
  id                                     String    @id @default(uuid())
  name                               	 String
  email                                  String    @unique
  jwt_token                              String?   @unique
  password                               String
  created_at                             String
  updated_at                             String?

  @@map("users")
}

model Urls {
  id       		String @id @default(uuid())
  original     	String @unique
  code    		String @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("urls")
}
